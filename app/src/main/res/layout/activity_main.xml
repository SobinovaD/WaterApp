<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bac_i"
        android:scaleType="centerCrop"/>


    <ImageView
        android:id="@+id/calendar_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/calendar" />
    <ImageView
        android:id="@+id/reset_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/reset" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:hint="Введите вес (kg)"
        android:gravity="center"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/waterIntakeGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цель: -"
        android:layout_below="@id/weightInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/waterIntakeProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выпито: -"
        android:layout_below="@id/waterIntakeGoal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/waterDrop"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/waterIntakeProgress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/drip_0" />

    <Button
        android:id="@+id/add50mlButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="+50 ml"
        android:layout_below="@id/waterDrop"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/add100mlButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="+100 ml"
        android:layout_below="@id/add50mlButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/add500mlButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="+500 ml"
        android:layout_below="@id/add100mlButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add500mlButton"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text=""
        android:textSize="35sp"
        android:background="@color/white"/>

</RelativeLayout>
